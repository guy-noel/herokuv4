{
  "name": "Device",
  "plural": "Devices",
  "base": "PersistedModel",
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "replaceOnPUT": false,
  "mixins": {
    "FireLoop": true,
    "TimeStamp": {
      "required": false,
      "validateUpsert": true
    },
    "Stats": [
      {
        "method": "stats",
        "endpoint": "/stats",
        "description": "Statistical information for Device registers.",
        "type": "model",
        "count": {
          "on": "createdAt",
          "by": "index"
        }
      }
    ]
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "required": true
    },
    "pek": {
      "type": "string",
      "pattern": "([a-fA-F0-9]{32})$",
      "min": 32,
      "max": 32
    },
    "name": {
      "type": "string"
    },
    "successRate": {
      "type": "number"
    },
    "data_downlink": {
      "type": "string",
      "pattern": "([a-fA-F0-9]{16})$",
      "min": 16,
      "max": 16
    },
    "properties": {
      "type": [
        "object"
      ]
    },
    "locatedAt": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "userId"
    },
    "Organizations": {
      "type": "hasAndBelongsToMany",
      "model": "Organization",
      "foreignKey": "organizationId"
    },
    "Category": {
      "type": "belongsTo",
      "model": "Category",
      "foreignKey": "categoryId"
    },
    "Messages": {
      "type": "hasMany",
      "model": "Message",
      "foreignKey": "deviceId"
    },
    "Geolocs": {
      "type": "hasMany",
      "model": "Geoloc",
      "foreignKey": "deviceId"
    },
    "Alerts": {
      "type": "hasMany",
      "model": "Alert",
      "foreignKey": "deviceId"
    },
    "Parser": {
      "type": "belongsTo",
      "model": "Parser",
      "foreignKey": "parserId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "find"
      ]
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "download"
      ]
    }
  ],
  "methods": {}
}
