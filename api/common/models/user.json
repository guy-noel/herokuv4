{
  "name": "user",
  "plural": "users",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "allowEternalTokens": true,
    "emailVerificationRequired": true,
    "restrictResetPasswordTokenScope": true
  },
  "replaceOnPUT": false,
  "mixins": {
    "FireLoop": true,
    "TimeStamp": {
      "required": false,
      "validateUpsert": true
    },
    "Stats": [
      {
        "method": "stats",
        "endpoint": "/stats",
        "description": "Statistical information for user registers.",
        "type": "model",
        "count": {
          "on": "createdAt",
          "by": "index"
        }
      }
    ]
  },
  "properties": {
    "avatar": {
      "type": "string",
      "default": "https://www.shareicon.net/data/128x128/2016/08/04/806683_man_512x512.png"
    },
    "loggedAt": {
      "type": "date"
    },
    "connected": {
      "type": "boolean"
    },
    "position": {
      "type": "object"
    },
    "devAccessTokens": {
      "type": [
        "AccessToken"
      ]
    }
  },
  "validations": [],
  "relations": {
    "Organizations": {
      "type": "hasAndBelongsToMany",
      "model": "Organization",
      "foreignKey": "userId"
    },
    "roles": {
      "type": "hasMany",
      "model": "Role",
      "foreignKey": "principalId",
      "through": "RoleMapping"
    },
    "Dashboards": {
      "type": "hasMany",
      "model": "Dashboard",
      "foreignKey": "userId"
    },
    "Widgets": {
      "type": "hasMany",
      "model": "Widget",
      "foreignKey": "userId"
    },
    "Categories": {
      "type": "hasMany",
      "model": "Category",
      "foreignKey": "userId"
    },
    "Devices": {
      "type": "hasMany",
      "model": "Device",
      "foreignKey": "userId"
    },
    "Messages": {
      "type": "hasMany",
      "model": "Message",
      "foreignKey": "userId"
    },
    "Geolocs": {
      "type": "hasMany",
      "model": "Geoloc",
      "foreignKey": "userId"
    },
    "Alerts": {
      "type": "hasMany",
      "model": "Alert",
      "foreignKey": "userId"
    },
    "Connectors": {
      "type": "hasMany",
      "model": "Connector",
      "foreignKey": "userId"
    },
    "Parsers": {
      "type": "hasMany",
      "model": "Parser",
      "foreignKey": "userId"
    },
    "Beacons": {
      "type": "hasMany",
      "model": "Beacon",
      "foreignKey": "userId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
