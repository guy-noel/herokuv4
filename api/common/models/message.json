{
  "name": "Message",
  "plural": "Messages",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "replaceOnPUT": false,
  "mixins": {
    "FireLoop": true,
    "TimeStamp": {
      "required": false,
      "validateUpsert": true
    },
    "Stats": [
      {
        "method": "stats",
        "endpoint": "/stats",
        "description": "Statistical information for Message registers.",
        "type": "model",
        "count": {
          "on": "createdAt",
          "by": "index"
        }
      }
    ]
  },
  "properties": {
    "deviceId": {
      "type": "string",
      "required": true
    },
    "time": {
      "type": "number",
      "required": true
    },
    "seqNumber": {
      "type": "number",
      "required": true
    },
    "data": {
      "type": "string",
      "pattern": "([a-fA-F0-9])$",
      "max": 24
    },
    "data_parsed": {
      "type": [
        "Property"
      ]
    },
    "data_downlink": {
      "type": "string",
      "pattern": "([a-fA-F0-9]{16})$",
      "min": 16,
      "max": 16
    },
    "downlinkAck": {
      "type": "boolean"
    },
    "deviceAck": {
      "type": "boolean"
    },
    "ack": {
      "type": "boolean"
    },
    "reception": {
      "type": [
        "Reception"
      ]
    }
  },
  "validations": [],
  "relations": {
    "Geolocs": {
      "type": "hasMany",
      "model": "Geoloc",
      "foreignKey": "messageId"
    },
    "Device": {
      "type": "belongsTo",
      "model": "Device",
      "foreignKey": "deviceId"
    },
    "user": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "userId"
    },
    "Organizations": {
      "type": "hasAndBelongsToMany",
      "model": "Organization",
      "foreignKey": "organizationId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "putSigfox",
        "putSigfoxAcknowledge",
        "postSigfoxStatus",
        "stats",
        "find"
      ]
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
