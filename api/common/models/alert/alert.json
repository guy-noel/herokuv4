{
  "replaceOnPUT": false,
  "name": "Alert",
  "plural": "Alerts",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "FireLoop": true,
    "TimeStamp": {
      "required": false,
      "validateUpsert": true
    },
    "Stats": [
      {
        "method": "stats",
        "endpoint": "/stats",
        "description": "Statistical information for Alert registers.",
        "type": "model",
        "count": {
          "on": "createdAt",
          "by": "index"
        }
      }
    ]
  },
  "properties": {
    "deviceId": {
      "type": "string",
      "required": true
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "one_shot": {
      "type": "boolean",
      "default": false
    },
    "triggeredAt": {
      "type": "date"
    },
    "key": {
      "type": "string",
      "required": true
    },
    "value": {
      "type": "AlertValue"
    },
    "geofence": {
      "type": ["AlertGeofence"]
    },
    "message": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "Connector": {
      "type": "belongsTo",
      "model": "Connector",
      "foreignKey": "connectorId"
    },
    "Device": {
      "type": "belongsTo",
      "model": "Device",
      "foreignKey": "deviceId"
    },
    "user": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "userId"
    },
    "Organization": {
      "type": "belongsTo",
      "model": "Organization",
      "foreignKey": "organizationId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
